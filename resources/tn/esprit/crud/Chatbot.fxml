<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.crud.controllers.ChatbotController">

    <VBox alignment="CENTER" spacing="10">
        <TextArea fx:id="chatArea" editable="false" prefHeight="300.0" prefWidth="600.0" />
        <HBox spacing="10">
            <TextField fx:id="userInput" prefWidth="450.0" promptText="Type your message..." />
            <Button onAction="#sendMessage" text="Send" />
        </HBox>
    </VBox>

</AnchorPane>
