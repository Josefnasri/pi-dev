<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="274.0" prefWidth="374.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ShowResponseDetailController">

    <VBox alignment="CENTER" prefHeight="274.0" prefWidth="374.0" spacing="10">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Response Details" />
        <Label fx:id="idResponseLabel" style="-fx-text-fill: #800080;" />
        <Label fx:id="requestIdLabel" style="-fx-text-fill: #800080;" />
        <Label fx:id="dateResponseLabel" style="-fx-text-fill: #800080;" />
        <Label fx:id="responseTextLabel" style="-fx-text-fill: #800080;" />
        <Label fx:id="responseStatusLabel" style="-fx-text-fill: #800080;" />
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#handleEdit" text="Edit" />
            <Button onAction="#handleDelete" text="Delete" />
        </HBox>
    </VBox>
</AnchorPane>
